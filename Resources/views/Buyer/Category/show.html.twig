{% extends 'HarvestCloudCoreBundle:Buyer:layout.html.twig' %}

{% block body_class %}buyer_category_show{% endblock %}
{% block buyer_content %}
    <h1>{{ category.title }}</h1>
    <ul>
        {% for product in category.products %}
            <li><a href="{{ path('Buyer_product_show', { 'id': product.id, 'path': category.path }) }}">{{ product.name }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
