{% extends 'HarvestCloudCoreBundle::Profile/layout.html.twig' %}

{% block content %}
    <h1>
        {% if profile.thumbnailPath %}
          <img src="{{ app.user.currentProfile.thumbnailWebPath }}" />
        {% endif %}
        {{ profile.name }} ({{ profile.slug }})
    </h1>

    <div class="two_equal_columns">
        <div class="left column">
            <h2>Profile Details</h2>
            <table class="nvp">
                <tr>
                    <th>Name</th>
                    <td>{{ profile.name }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ profile.defaultLocation.address }}</td>
                </tr>
            </table><!-- .nvp -->
        </div><!-- .left.column -->
        <div class="right column">
            {% if profile.hasSellerHubRefsAsSeller %}
                <h2>{{ profile }} delivers to the following hubs</h2>
                <table>
                    {% for sellerHubRef in profile.sellerHubRefsAsSeller %}
                        <tr>
                            <td><a href="{{ path('Profile_show', { 'slug': sellerHubRef.hub.slug }) }}">{{ sellerHubRef.hub }}</a></td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
            {% if profile.hasSellerHubRefsAsHub %}
                <h2>Sellers that deliver to {{ profile }}</h2>
                <table>
                    {% for sellerHubRef in profile.sellerHubRefsAsHub %}
                        <tr>
                            <td><a href="{{ path('Profile_show', { 'slug': sellerHubRef.seller.slug }) }}">{{ sellerHubRef.seller }}</a></td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
        </div><!-- .right.column -->
        <div class="clear"></div>
    </div><!-- .two_equal_columns -->
    <p>
        {% if app.user.currentProfile.id == profile.id %}
            <form method="get" action="{{ path('Profile_edit', { 'slug': profile.slug }) }}">
                <input type="submit" value="Edit" />
            </form>
        {% endif %}
    </p>
    {% if products %}
        <h4>Currently for sale</h4>
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Location</th>
                    <th>Price</th>
                    <th>Quantity Available</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td><a href="{{ path('Profile_product_show', { 'product_slug': product.slug, 'slug': product.seller.slug }) }}">{{ product.name }}</a></td>
                        <td class="location">{{ product.location.cityState }}</td>
                        <td class="price">${{ product.price }}</td>
                        <td class="quantity">{{ product.quantityAvailableForCart }} {{ product.unitAvailableForCart }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
